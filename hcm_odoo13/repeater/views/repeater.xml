<odoo>
    <data>
        <record model="ir.ui.view" id="repeater_repeater_form">
            <field name="name">repeater_repeater_form</field>
            <field name="model">repeater.repeater</field>
            <field name="arch" type="xml">
                <form string="Product Template">
                    <header>
                        <button name="action_draft" type="object" string="Bản Thảo" class="btn-primary" states="begin,cancel" />
                        <button name="action_begin" type="object" class="btn-primary" string="Khởi Động" states="draft,working" />
                        <button name="action_working" type="object" class="btn-primary" string="Đang Hoạt Động" states="begin" />
                        <button name="action_fail" type="object" class="btn-primary" string="Hư hỏng" states="working" />
                        <button name="action_cancel" type="object" class="btn-primary" string="Xóa" states="draft,begin,working,fail" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,begin,working,fail,cancel" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="category_id" />
                                <field name="brand_id" />
                                <field name="model_id" />
                                <field name="serial_number" />
                                <field name="address" />
                            </group>
                            <group>
                                <field name="lat" />
                                <field name="long" />
                                <field name="ma_diem_den" />
                                <field name="ma_pa_khach_hang" />
                                <field name="mang2g3g4g" />
                                <field name="partner_id" />
                                <field name="phone" />
                            </group>
                            <group>
                                <field name="department_id" />
                                <field name="dau_moi_hcm_id" />
                                <field name="hcm_phone" />
                                <field name="customer_id" />
                                <field name="customer_phone" />
                                <field name="start_time" />
                                <!-- <field name="bien_ban_xac_nhan" /> -->
                                <field name="start_note" />
                            </group>
                            <group>
                                <field name="thu_hoi_time" />
                                <field name="nguyen_nhan_thu_hoi" />
                                <field name="nhan_vien_thu_hoi_id" />
                                <field name="thu_hoi_phone" />
                                <field name="don_vi_thu_hoi" />
                                <field name="note" />
                                <field name="write_uid" />
                                <field name="write_date" />
                            </group>
                        </group>
                        <notebook>
                            <page name="image" string="Ảnh">
                                    <field name="image_ids">
                                        <tree>
                                            <field name="image" />
                                        </tree>
                                    </field>
                            </page>

                            <page name="bien_ban_xac_nhan_ids" string="Biên bảng xác nhận">
                                    <field name="bien_ban_xac_nhan_ids">
                                        <form>
                                            <group>
                                                <field name="name" invisible="1" />
                                                <field name="filedata" filename="name"/>
                                            </group>
                                        </form>

                                        <tree>
                                            <field name="name" />
                                            <field name="filedata" />
                                        </tree>

                                    </field>
                            </page>


                            
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="repeater_repeater_tree">
            <field name="name">repeater_repeater_tree</field>
            <field name="model">repeater.repeater</field>
            <field name="arch" type="xml">
                <tree string="Product Template">
                    <field name="state" />
                    <field name="name" />
                    <field name="department_id" />
                    <field name="category_id" />
                    <field name="brand_id" />
                    <field name="model_id" />
                    <field name="serial_number" />
                    <field name="address" />
                    <field name="lat" />
                    <field name="long" />
                    <!-- <field name="ma_diem_den" />
                    <field name="ma_pa_khach_hang" />
                    <field name="mang2g3g4g" /> -->
                    <field name="partner_id" />
                    <field name="phone" />
                    <!-- <field name="dau_moi_hcm_id" />
                    <field name="hcm_phone" />
                    <field name="customer_id" />
                    <field name="customer_phone" /> -->
                    <field name="start_time" />
                    <!-- <field name="bien_ban_xac_nhan" />
                    <field name="start_note" />
                    <field name="thu_hoi_time" />
                    <field name="nguyen_nhan_thu_hoi" />
                    <field name="nhan_vien_thu_hoi_id" />
                    <field name="thu_hoi_phone" />
                    <field name="don_vi_thu_hoi" /> -->
                    <field name="note" />
                    <field name="write_uid" />
                    <field name="write_date" />

                </tree>
            </field>
        </record>
        <record id="template_search_new" model="ir.ui.view">
            <field name="name">template_search_new</field>
            <field name="model">repeater.repeater</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" />
                    <field name="state" />
                    <field name="long" />
                    <field name="lat" />
                    <!-- <field name="category" /> -->
                    <field name="category_id" />
                    <field name="brand_id" />
                    <field name="model_id" />
                    <field name="address" />
                    <field name="partner_id" />
                    <field name="department_id" />
                    <separator />
                    <!-- <filter name="danxe" string="Dán xe" domain="[('loaiphuluc','=','danxe')]"/>
					<filter name="lapframe" string="Lắp Frame" domain="[('loaiphuluc','=','lapframe')]"/> -->
                    <group expand="0" string="Group By...">
                        <filter name="name" string="Tên Repeater" context="{'group_by':'name'}" />
                        <filter name="state" string="Loại Thiết Bị" context="{'group_by':'state'}" />
                        <filter name="brand_id" string="Hãng sản xuất" context="{'group_by':'brand_id'}" />
                        <filter name="model" string="Model"  context="{'group_by':'model'}" />
                        <filter name="partner_id" string="Nhân viên chuyên quản" context="{'group_by':'name'}" />
                        <filter name="department_id" string="Nhân viên chuyên quản" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="repeater_act">
            <field name="name">Repeater</field>
            <field name="res_model">repeater.repeater</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="repeater_repeater_tree"></field>
            <field name="search_view_id" ref="template_search_new" />
        </record>
        <record id="form_new_action_new" model="ir.actions.act_window.view">
            <field eval="2" name="sequence" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="repeater_repeater_form" />
            <field name="act_window_id" ref="repeater_act" />
        </record>
        <record id="tree_new_action_new" model="ir.actions.act_window.view">
            <field eval="1" name="sequence" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="repeater_repeater_tree" />
            <field name="act_window_id" ref="repeater_act" />
        </record>
        <menuitem id="new_template_menu" string="Repeater" name="Repeater" />
        <menuitem id="sub_new_template_menu" string="Repeater" name="Repeater" parent="new_template_menu" action="repeater_act" />
    </data>
</odoo>